<!DCTYPE html>
<html>
 <body>
   <h1>Editing Book</h1>
   <%= form_with model: @book do |f| %>
 <div>
    <h4>Title</h4>
    <%= f.text_field :title %>
 </div>

 <div>
    <h4>Body</h4>
    <%= f.text_area :body %>
 </div>
  <div>
   <%= f.submit 'Update Book' %>
  </div>

   <%= link_to "Show", book_path %>
   <%= link_to "Back", books_path %>

   <% end %>
 </body>
</html>